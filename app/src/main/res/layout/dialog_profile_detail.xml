<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="5dp"
            android:id="@+id/card_imageview"
            app:cardCornerRadius="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="300dp">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/dialog_image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"/>

            <TextView
                    android:id="@+id/dialog_text_username"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|start"
                    android:layout_height="wrap_content"/>

        </FrameLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_below="@+id/card_imageview"
            android:id="@+id/card_profile_link"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/dialog_profile_link"
                android:textSize="18sp"
                android:textColor="@color/linkColor"
                android:textStyle="bold"
                android:text="www.api.github.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_below="@+id/card_profile_link"
            android:id="@+id/dialog_card_share_button"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="5dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_below="@+id/card_profile_link"
            android:layout_width="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/dialog_button_share"
                android:layout_width="wrap_content"
                android:text="share profile"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content"/>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>



</RelativeLayout>